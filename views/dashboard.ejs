<!-- contenu Dashboard -->
    <div id="main-dashboard">
        <h3>Bienvenue <%=user.pseudo%>, commencez à jouer et parier avec vos amis</h3><br>

        <div class="container">


          <div class="row">

            <div class="col-6" id="players">
              <h4>Amis</h4>

              <%
              for(var i=0; i<dataFriend.length; i++) {
              %>
              <ul class="list-group">
                <li class="list-group-item"><%=dataFriend[i].name%></li>
              </ul>

              <%
              }
              %>

            </div>

              <div class="col-4">
                <h4>Choisis un jeu et un ami</h4>
                <form action="/choice" method="POST">
                  <input class="form-control" name="game" type="text" placeholder="Tapes le nom du jeu"><br>
                  <input class="form-control" name="friend" type="text" placeholder="Tapes le pseudo de ton ami"><br>
                  <button type="submit" class="btn btn-sample btn-secondary">Valider</button>
                </form>
              </div>

          </div>

        </div>
    </div>



